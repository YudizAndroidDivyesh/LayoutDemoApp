<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/statusCheck_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/batteryPercentage"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="27dp"
        android:background="@drawable/baseline_battery_charging_full_24"
        android:backgroundTint="#FF0000" />

    <Button
        android:id="@+id/startBrodCast_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:text="Start"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/stopBrodCast_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statusCheck_tv"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="90dp"
        android:layout_toStartOf="@+id/startBrodCast_btn"
        android:text="Stop"
        android:textAllCaps="false" />
</RelativeLayout>