<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/statusCheck_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/icon"
        android:layout_alignParentTop="true"
        android:text="@string/batteryPercentage"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/baseline_battery_charging_full_24"
        android:backgroundTint="#FF0000" />

    <Button
        android:id="@+id/broadCast_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/statusCheck_tv"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:text="Start" />

    <Button
        android:id="@+id/broadCast_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/statusCheck_tv"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:text="Stop" />


</RelativeLayout>