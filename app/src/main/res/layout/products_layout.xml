<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/light_black"
    android:background="@drawable/btnroundshap"
    android:padding="10dp"
    android:layout_margin="5dp"
    android:elevation="4dp">

    <ImageView
        android:id="@+id/thumbnail_iv"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/product_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/product_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:text="@string/title_activity_maps"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/thumbnail_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="price"
        android:textSize="20dp"
        android:layout_margin="30dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/product_title_tv"
        app:layout_constraintStart_toStartOf="@+id/product_title_tv"
        app:layout_constraintTop_toBottomOf="@+id/product_title_tv" />

    <TextView
        android:id="@+id/category_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="category"
        android:textSize="20dp"
        android:layout_margin="20dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/price_tv"
        app:layout_constraintStart_toStartOf="@+id/price_tv"
        app:layout_constraintTop_toBottomOf="@+id/price_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>